{
  "extends": "@tooling/tsconfig/remix",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx",
    "node_modules/@remix-run/react/future/single-fetch.d.ts"
  ],
  "compilerOptions": {
    "types": [
      "@remix-run/node",
      "@remix-run/react/future/single-fetch.d.ts",
      "vite/client"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    }
  }
}
